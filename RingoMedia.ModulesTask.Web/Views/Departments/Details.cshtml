@model RingoMedia.ModulesTask.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LogoPath)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.LogoPath" alt="Department Logo" width="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParentDepartmentId)
        </dt>
        <dd class="col-sm-10">
            @while (Model.ParentDepartment != null)
            {
                <text> -> </text> @Html.DisplayFor(model => model.ParentDepartment.Name) 
                Model.ParentDepartment = Model.ParentDepartment.ParentDepartment;
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubDepartments)
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.SubDepartments.Select(x => x.Name))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
